<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SumTheNumbersGameXamarin.Views.MainPageView"
             x:Name="MainPage"
             >

    <ContentPage.Content>
        <FlexLayout  Direction="Column" JustifyContent="Center"  BackgroundColor="#434da3" AlignItems="Center">
            <Button Text="PLAY" Style="{StaticResource menuButton}"  Command="{Binding NavigationCommand}" CommandParameter="GamePage"/>
            <Button Text="HOW TO PLAY" Style="{StaticResource menuButton}" IsEnabled="False" />
            <Button Text="SETTINGS"  Style="{StaticResource menuButton}" Command="{Binding NavigationCommand}" CommandParameter="SettingsPage"/>
        </FlexLayout>
    </ContentPage.Content>
    
</ContentPage>
